<section class="shop-multicolumn" role="region" aria-label="Value Propositions">
  {% for block in section.blocks %}
    <div class="column">
      {% if block.settings.image %}
        <img src="{{ block.settings.image | image_url: width: 120 }}" alt="{{ block.settings.heading | escape }}" width="32" height="32" loading="lazy" role="img" aria-describedby="column-desc-{{ forloop.index }}">
      {% endif %}
      {% if block.settings.heading != blank %}
        <h3>{{ block.settings.heading }}</h3>
      {% endif %}
      {% if block.settings.text != blank %}
        <p id="column-desc-{{ forloop.index }}">{{ block.settings.text }}</p>
      {% endif %}
    </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Colonnes personnalisées",
  "max_blocks": 6,
  "blocks": [
    {
      "type": "column",
      "name": "Colonne",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icône"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texte"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Colonnes personnalisées",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
