{% liquid
    assign pt = settings.pt | prepend: 'pt-'
    assign pb = settings.pb | prepend: 'pb-'
    assign mt = settings.mt | prepend: 'mt-'
    assign mb = settings.mb | prepend: 'mb-'
  
    assign bg_color = settings.bg_color
  
    if settings.bg_gradient
      assign bg_color = bg_color | append: ' bg-gradient'
    endif

    assign btn_shadow_sp = settings.btn_shadow_sp
  
    assign block_count = 0
%}

<style>
  @media (min-width: 1200px) {
      #accordion-{{ id }} {
          height: {{ settings.accordion_height }}px;
      }
   }
  
  #accordion-visual-{{ id }} .accordion-item,
  #accordion-visual-{{ id }} .accordion-body,
  #accordion-visual-{{ id }} .accordion-collapse {
      background-color: transparent !important;
  }
  #accordion-visual-{{ id }} .accordion-button {
      background-color: {{ settings.accordion_bg_color }};
  }
  #accordion-visual-{{ id }} .accordion-button,
  #accordion-visual-{{ id }} .accordion-body {
      color: {{ settings.accordion_text_color }};
  }

  .accordion-visual .accordion-header img {
      opacity: {{ settings.img_opacity }};
    }
  
  {%- for block in blocks -%}
    /* Base Icon Style */
    .accordion-visual .icon-{{ block.id }} {
        filter: none;
        position: absolute;
        bottom: 1.25rem;
        border-radius: 50%;
        background-image: none;
        background-color: none !important;
        font-size: 1.4rem;
        line-height: 2.25rem;
        text-align: center;
        text-shadow: 2px 2px 2px rgba(0, 0, 0, .25);
        
        /* Icon SVG */
        .accordion-visual .icon-{{ block.id }} svg {
            height: {{ block.settings.icon_width }}px;
            width: {{ block.settings.icon_width }}px;
        }
    }
    
    /* Media Queries */
    @media (min-width: 1200px) {
        .accordion-visual .icon-{{ block.id }} {
            left: initial;
            transform: none;
        }
    }
    
    @media (max-width: 767px) {
        .accordion-visual .icon-{{ block.id }} {
            left: 50%;
            transform: translateX(-50%);
        }
        .accordion-visual .icon-{{ block.id }} svg {
            height: calc({{ block.settings.icon_width }}px * 0.8); /* 80% of the original size */
            width: calc({{ block.settings.icon_width }}px * 0.8);
        }
    }
    
    @media (min-width: 768px) {
        .accordion-visual .icon-{{ block.id }} {
            left: 50%;
            transform: translateX(-50%);
        }
        .accordion-visual .icon-{{ block.id }} svg {
            height: calc({{ block.settings.icon_width }}px * 0.8); /* 80% of the original size */
            width: calc({{ block.settings.icon_width }}px * 0.8);
        }
    }
    
    /* Icon visibility when accordion is expanded */
    .accordion-visual .accordion-button:not(.collapsed) .icon-{{ block.id }} {
        display: none;
    }
  {%- endfor -%}
  
</style>

<section
    id="accordion-visual-{{ id }}"
    class="accordion-visual enter-view {{ bg_color }} {{ settings.text_align }} {{ pt }} {{ pb }} {{ mt }} {{ mb }}"
>
    <div class="{{ settings.container }}"
         style="max-width: {{ settings.max_width }}px;">
        {% render 'section-header' %}
        <div
            id="accordion-{{ id }}"
            class="accordion pt-4"
        >
            {% for block in blocks %}
                {% assign block_count = block_count | plus: 2 %}
                <div
                    class="accordion-item {% unless settings.animation == '' %}animate__animated opacity-0 {{ settings.animation_speed }}{% endunless %}"
                    data-animate-class="{{ settings.animation }}"
                    style="animation-delay: {{ block_count }}00ms;"
                >
                    <{{ block.settings.heading_tag }}
                        id="accordion-header-{{ block.id }}"
                        class="accordion-header"
                    >
                        <button
                            class="accordion-button {% unless forloop.first and settings.show_expanded %}collapsed{% endunless %}"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#accordion-collapse-{{ block.id }}"
                            aria-expanded="{% if forloop.first and settings.show_expanded %}true{% else %}false{% endif %}"
                            aria-controls="accordion-collapse-{{ block.id }}"
                        >
                            <img
                                class="img-fluid w-100 {{ settings.img_thumbnail }} {{ settings.shadow_sp }} {{ settings.border_color }}"
                                src="{{ block.settings.image.src | image_url: width: 900, height: 900, crop: 'center' }}"
                                alt="{{ block.settings.image.alt | escape }}"
                                width="900"
                                height="900"
                                style="border-width: {{ settings.border_width }}px; --accordion-visual-image-blur: {{ settings.accordion_item_blur }}px;"
                                loading="lazy"
                            >
                            <span class="text-center fw-{{ settings.text_font_weight }}">
                                {{ block.settings.title_img | escape }}
                            </span>
                            {% unless block.settings.btn_icon == blank %}
                                <div class="icon-{{ block.id }}">{{ block.settings.btn_icon }}</div>
                            {% endunless %}
                        </button>
                    </{{ block.settings.heading_tag }}>
                    <div
                        id="accordion-collapse-{{ block.id }}"
                        class="accordion-collapse collapse {% if forloop.first and settings.show_expanded %}show{% endif %}"
                        aria-labelledby="accordion-header-{{ block.id }}"
                        data-bs-parent="#accordion-{{ id }}"
                    >
                        <div class="accordion-body rte">
                            <div>
                                {% unless block.settings.title == blank %}
                                    <{{ block.settings.heading_tag }} class="title {{ block.settings.title_size }}">
                                        {{ block.settings.title }}
                                    </{{ block.settings.heading_tag }}>
                                {% endunless %}
                                {% unless block.settings.description == blank %}
                                    <div class="description rte mb-6 {{ block.settings.description_size }}">
                                        {{ block.settings.description }}
                                    </div>
                                {% endunless %}
                                {% unless block.settings.btn_text == blank %}
                                    <a
                                        href="{{ block.settings.btn_url }}"
                                        class="btn mb-1 {{ block.settings.btn_color }} {{ btn_shadow_sp }} {{ block.settings.btn_size }}  mb-3 text-center"
                                    >
                                        {{ block.settings.btn_text }}
                                    </a>
                                {% endunless %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

