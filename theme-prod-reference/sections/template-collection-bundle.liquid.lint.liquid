{%- comment -%}
<link href="{{ 'collection-bundle.css' | asset_url }}" rel="stylesheet">
<script>
window.shopiweb_bundle = {
    tiers: '{{ section.settings.bundle_tiers }}',
}
</script>
<script src="{{ 'collection-bundle.js' | asset_url }}" defer></script>
{%- endcomment -%}

<div id="collection-bundle-lint" class="collection-bundle pb-11">
    <header class="collection-header pt-11 mb-8 mb-lg-9">
        <div class="container">
            <h1 class="collection-title mb-0">
                Collection Title
            </h1>
            <div class="description rte mt-2 mb-0">
                Collection description goes here.
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row flex-lg-row-reverse">
            <div class="col-lg-4 col-xxl-3">
               <div id="card-bundle" class="card mt-lg-4 mb-5">
                    <h3 class="card-header py-4">
                        Bundle Card Title
                    </h3>
                    <div class="card-body">
                        <div class="bd-pss-wrapper">
                            <ul class="bd-pss-tiers list-unstyled" aria-hidden="true">
                                <li>Tier 1: $100 - $10 off</li>
                                <li>Tier 2: $200 - $20 off</li>
                                <li>Tier 3: $300 - $40 off</li>
                            </ul>
                            <div class="bd-pss progress">
                                <div class="progress-bar" style="width: 50%">50%</div>
                            </div>
                            <p class="d-flex justify-content-between fw-bold mb-0">
                                <span>Bundle Price</span>
                                <span>$250</span>
                            </p>
                            <p class="d-flex justify-content-between">
                                <span>You Save</span>
                                <span>$40</span>
                            </p>
                            <button class="btn btn-primary w-100" type="button" disabled>
                                Add Bundle to Cart
                            </button>
                            <button class="btn btn-outline-secondary w-100 mt-2" type="button">
                                View Bundle Contents
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-xxl-9">
                <ul class="product-listing list-unstyled row mx-n3 mx-lg-n4 mb-0">
                    <li>Product 1</li>
                    <li>Product 2</li>
                    <li>Product 3</li>
                </ul>
                <div id="paging-collection" class="text-center mx-auto pt-8 pb-4" aria-hidden="true">
                    <small class="d-block text-muted mb-3 fst-italic">
                        Showing 1-3 of 48 products
                    </small>
                    <div class="progress mb-0">
                        <div class="progress-bar" style="width: 10%">10%</div>
                    </div>
                    <button class="btn btn-outline-secondary btn-sm my-4" type="button" disabled>
                        Load Previous
                    </button>
                    <button class="btn btn-outline-secondary btn-sm my-4" type="button">
                        Load More
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-bundle-contents" class="modal fade" tabindex="-1" aria-labelledby="modal-bundle-contents-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="">
                    <h2 id="modal-bundle-contents-label" class="modal-title">
                        Bundle Contents
                    </h2>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="bundle-contents-empty my-5 rte text-center" hidden>
                    No products in this bundle yet.
                </div>
                <ul class="product-listing list-unstyled" hidden>
                    <li>Product 1</li>
                    <li>Product 2</li>
                </ul>
            </div>
            <div class="modal-footer d-block">
                <div class="">
                    <p class="d-flex justify-content-between fw-bold mb-0">
                        <span>Bundle Price</span>
                        <span>$250</span>
                    </p>
                    <p class="d-flex justify-content-between">
                        <span>You Save</span>
                        <span>$40</span>
                    </p>
                    <button class="btn btn-primary w-100" type="button" disabled>
                        Add Bundle to Cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="sticky-mobile-bundle-card" class="fixed-bottom bg-white text-body pt-4 px-5 pb-6 d-lg-none">
    <p class="d-flex justify-content-between fw-bold mb-0">
        <span>Bundle Price</span>
        <span>$250</span>
    </p>
    <p class="d-flex justify-content-between mb-4">
        <span>You Save</span>
        <span>$40</span>
    </p>
    <button class="btn btn-outline-secondary w-100" type="button" data-bs-target="#modal-bundle-contents" data-bs-toggle="modal">
        View Bundle Contents
    </button>
</div>
