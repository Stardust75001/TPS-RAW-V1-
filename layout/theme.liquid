{% render 'shogun-content-handler' %}
<!doctype html>
<html lang="{{ request.locale.iso_code }}" dir="ltr"
      class="{% if settings.animations_on_scroll %}scroll-on-animations{% endif %}"
      {% if settings.browser_tab_enable %}data-inactive-tab-text="{{ settings.browser_tab_text }}"{% endif %}>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_primary }}">
  <meta name="language" content="{{ request.locale.iso_code }}">

  <link rel="canonical" href="{{ canonical_url }}">
  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
  <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>

  {% liquid
    for language in localization.available_languages
      echo '<link rel="alternate" hreflang="' | append: language.iso_code | append: '" href="' | append: language.root_url | default: '/' | append: '">' 
    endfor
  %}
  <link rel="alternate" hreflang="x-default" href="{{ shop.url }}">

  {% unless settings.favicon == blank %}
    <link rel="icon" type="image/png" sizes="16x16" href="{{ settings.favicon | image_url: width: 16, height: 16, crop: 'center' }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ settings.favicon | image_url: width: 32, height: 32, crop: 'center' }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ settings.favicon | image_url: width: 180, height: 180, crop: 'center' }}">
  {% endunless %}

  <title>{{ page_title }}{% if current_tags %} – tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} – Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} – {{ shop.name }}{% endunless %}</title>
  
  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {% render 'seo-meta-tags' %}
  {% render 'structured-data' %}
  {{ content_for_header }}
  
  {% style %}
    {{ settings.code_css }}
  {% endstyle %}

  <!-- STYLES -->
  {{ 'vendor-bootstrap.min.css' | shopify_asset_url | stylesheet_tag: preload: true }}
  {{ 'vendor-splide.min.css' | shopify_asset_url | stylesheet_tag: preload: true }}
  {{ 'vendor-animate.min.css' | shopify_asset_url | stylesheet_tag: preload: true }}
  {{ 'variables.css' | shopify_asset_url | stylesheet_tag: preload: true }}
  {{ 'base.css' | shopify_asset_url | stylesheet_tag: preload: true }}
  {{ 'general.css' | shopify_asset_url | stylesheet_tag: preload: true }}
  {{ 'sections.css' | shopify_asset_url | stylesheet_tag: preload: true }}
  {{ 'collection.css' | shopify_asset_url | stylesheet_tag: preload: true }}
  {{ 'product.css' | shopify_asset_url | stylesheet_tag: preload: true }}
  {{ 'cart.css' | shopify_asset_url | stylesheet_tag: preload: true }}
  {{ 'custom-style.css' | shopify_asset_url | stylesheet_tag: preload: true }}

  {% if request.page_type == 'collection' %}
    {{ 'vendor-nouislider.min.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'vendor-nouislider.min.js' | asset_url }}" defer="defer"></script>
  {% endif %}

  {% if request.page_type == 'product' %}
    {{ 'vendor-glightbox.min.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'vendor-glightbox.min.js' | asset_url }}" defer="defer"></script>
  {% endif %}

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      document.querySelectorAll("img:not([loading])").forEach(img => {
        img.setAttribute("loading", "lazy");
      });
    });
  </script>

  <!-- Sentry Full Browser Error Tracking -->
  <!-- Theme-check: External scripts should be served by Shopify CDN. Remove or self-host if possible. -->
  <script>
    if (typeof Sentry !== 'undefined') {
      Sentry.init({
        dsn: "https://7749477b70b2d5464b4d6e0c692d4d2f@o4501249924.ingest.sentry.io/4501249924",
        integrations: [new Sentry.BrowserTracing()],
        tracesSampleRate: 1.0,
      });
    }
  </script>

  {{ settings.code_javascript }}
  {{ settings.code_head }}

  <meta name="ahrefs-site-verification" content="f0844a04241de9c72dcf4b0a6722d754c83b2d83a4b30e3baeb023adee8c5b8">
  <meta name="google-site-verification" content="XSy7t9KY7vVM38b">
  
  <!-- Google Tag Manager -->
  <script>
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-P958YCM4');
  </script>
  <!-- End Google Tag Manager -->
  
  {% render 'shogun-head' %}
</head>

<body class="{{ request.page_type | prepend: 'page-type-' }}">
  <!-- Google Tag Manager (noscript) -->
  <noscript>
    <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-P958YCM4"
    height="0" width="0" style="display:none;visibility:hidden"></iframe>
  </noscript>
  <!-- End Google Tag Manager (noscript) -->
  
  <a class="visually-hidden-focusable" href="#main">{{ 'general.accessibility.skip_content' | t }}</a>

  {% liquid
    render 'right-clic'
    render 'scroll-top'
    render 'text-selection'
    render 'image-drag'
  %}

  {% if section.settings.whatsapp_business_enable %}
    {%- comment -%} WhatsApp Business snippet removed because it does not exist. {%- endcomment -%}
  {% endif %}

  <div class="header-sticky-group">
    {% section 'announcement-bar' %}
    <div class="top-social-bar">
      <div class="social-icons-left">
        {% render 'social-icons-no-flags' %}
      </div>
      <div class="language-selector-right">
        <a href="/fr">
          <img src="{{ 'flag-fr.png' | shopify_asset_url }}" class="flag-icon" alt="FR" width="32" height="20" loading="eager">
        </a>
        <a href="{{ routes.root_url }}">
          <img src="{{ 'flag-en.png' | shopify_asset_url }}" class="flag-icon" alt="EN" width="32" height="20" loading="eager">
        </a>
        <a href="/de">
          <img src="{{ 'flag-de.png' | shopify_asset_url }}" class="flag-icon" alt="DE" width="32" height="20" loading="eager">
        </a>
      </div>
    </div>
    {% section 'discount-bar' %}
    <div class="announcement-text shipping-notice">
      {% assign lang = request.locale.iso_code %}
      <a href="{% if lang == 'fr' %}/fr/pages/eee{% elsif lang == 'de' %}/de/pages/eee{% else %}/pages/eee{% endif %}">
        {{ 'announcement.shipping_notice' | t }}
      </a>
    </div>
    {% section 'navbar' %}
    {% section 'stories-bar-sticky-dynamic' %}
  </div>

  <main id="main"{% if template.name == 'index' %} class="homepage-main"{% endif %}>
    {{ content_for_layout }}
  </main>

  {% liquid
    sections 'footer-group'
  %}
  
  {% render 'offcanvas-cart' %}
  {% render 'offcanvas-search' %}
  {% render 'offcanvas-wishlist' %}
  {% render 'back-to-top' %}

  <!-- JS - fin de page pour perf -->
  <script>
    window.shopMoneyFormat = {{ shop.money_format | json }};
    window.shopLocale = '{{ request.locale.iso_code }}';
  </script>
  
  <script src="{{ 'shopify_common.js' | shopify_asset_url }}" defer="defer"></script>
  <script src="{{ 'vendor-bootstrap.bundle.min.js' | shopify_asset_url }}" defer="defer"></script>
  <script src="{{ 'vendor-splide.min.js' | shopify_asset_url }}" defer="defer"></script>
  <script src="{{ 'base.js' | shopify_asset_url }}" defer="defer"></script>
  <script src="{{ 'general.js' | shopify_asset_url }}" defer="defer"></script>
  <script src="{{ 'search.js' | shopify_asset_url }}" async="async"></script>
  <script src="{{ 'sections.js' | shopify_asset_url }}" async="async"></script>
  <script src="{{ 'collection.js' | shopify_asset_url }}" async="async"></script>
  <script src="{{ 'product.js' | shopify_asset_url }}" async="async"></script>
  <script src="{{ 'cart.js' | shopify_asset_url }}" async="async"></script>
  <script src="{{ 'custom.js' | shopify_asset_url }}" async="async"></script>
  <script src="{{ 'wishlist.js' | shopify_asset_url }}" defer="defer"></script>
  <script src="{{ 'stories-tooltips.js' | shopify_asset_url }}" defer="defer"></script>

  {% if settings.wishlist_enable %}
    <div class="mobile-wishlist-fixed d-md-none">
      <button
        class="wishlist-icon nav-link btn btn-link p-0 position-relative"
        type="button"
        aria-label="{{ 'general.accessibility.wishlist' | t }}"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvas-wishlist"
        role="button">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2"
             stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
        </svg>
        <span
          class="wishlist-count-badge badge d-inline-block"
          aria-live="polite"
          aria-atomic="true"
          hidden>
        </span>
      </button>
    </div>
  {% endif %}
  
  {% render 'whatsapp-global' %}
</body>
</html>