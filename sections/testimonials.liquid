    {% liquid 
        assign pt = section.settings.pt | prepend: 'pt-'
        assign pb = section.settings.pb | prepend: 'pb-'
        assign mt = section.settings.mt | prepend: 'mt-'
        assign mb = section.settings.mb | prepend: 'mb-'

        assign bg_color = section.settings.bg_color

        if section.settings.bg_gradient
            assign bg_color = bg_color | append: ' bg-gradient'
        endif

        assign btn_shadow_sp = settings.btn_shadow_sp %}

    <section 
        id="testimonials-{{ section.id }}" 
        class="testimonials enter-view {{ bg_color }} {{ section.settings.text_align }} {{ pt }} {{ pb }} {{ mt }} {{ mb }}">
        <div class="{{ section.settings.container }}">
            {% render 'section-header' %}
            <div 
                class="splide mx-n3 mx-lg-n4"
                data-loop="{{ section.settings.carousel_loop }}"
                data-arrows="{{ section.settings.carousel_arrows }}"
                data-pagination="{{ section.settings.carousel_pagination }}"
                data-easing="{{ section.settings.carousel_easing }}"
                data-speed="{{ section.settings.carousel_speed }}"
                data-autoplay="{{ section.settings.carousel_autoplay }}"
                data-interval="{{ section.settings.carousel_interval | times: 1000 }}"
                data-per-move="{{ section.settings.carousel_per_move }}"
                data-rewind="{{ section.settings.carousel_rewind }}"
                data-breakpoint-xs="{{ section.settings.breakpoint_xs }}"
                data-breakpoint-sm="{{ section.settings.breakpoint_sm }}"
                data-breakpoint-md="{{ section.settings.breakpoint_md }}"
                data-breakpoint-lg="{{ section.settings.breakpoint_lg }}"
                data-breakpoint-xl="{{ section.settings.breakpoint_xl }}"
                data-breakpoint-xxl="{{ section.settings.breakpoint_xxl }}"
                data-text-slide-of="{{ 'general.accessibility.slide_of' | t }}"
                role="group">
                <div class="splide__track mb-8">
                    <ul class="splide__list">
                        {% for block in section.blocks %}
                            {% liquid 
                                case block.settings.img_orientation
                                    when 'square'
                                        assign img_width  = 600
                                        assign img_height = 600
                                    when 'landscape'
                                        assign img_width  = 600
                                        assign img_height = 480
                                    when 'potrait'
                                        assign img_width  = 480
                                        assign img_height = 600
                                endcase %}
                            <li class="splide__slide p-3 p-lg-4" {{ block.shopify_attributes }}>
                                <div 
                                    class="card text-body {{ block.settings.shadow_sp }} {{ block.settings.border_color }} {% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                                    data-animate-class="{{ section.settings.animation }}"
                                    style="animation-delay: {{ forloop.index | times: 150 }}ms; border-width: {{ block.settings.border_width }}px;">
                        
                                    {% if section.settings.card_image_type == 'card-img-top' %}
                                    <div class="card-body-image">
                                        <div class="d-flex align-items-center {{ block.settings.title_align }} mb-2">
                                            {% if block.settings.video != nil %}
                                                {{ block.settings.video | video_tag: 
                                                    class: 'card-img-top', 
                                                    image_size: '600x', 
                                                    autoplay: block.settings.autoplay, 
                                                    loop: block.settings.loop, 
                                                    muted: block.settings.muted, 
                                                    controls: block.settings.controls
                                                }}
                                            {% elsif block.settings.img != nil %}
                                                <img
                                                    class="img-fluid card-img-top"
                                                    src="{{ block.settings.img.src | image_url: width: img_width, height: img_height, crop: 'center' }}"
                                                    alt="{{ block.settings.img.alt | escape }}"
                                                    width="{{ img_width }}"
                                                    height="{{ img_height }}"
                                                    loading="lazy">
                                            {% endif %}
                                        </div>
                                    </div>
                                    {% endif %}
                                    
                                    <div class="card-body {{ block.settings.text_align }}">
                                        <div class="d-flex align-items-center {{ block.settings.title_align }} mb-5">
                                            {% unless block.settings.img_author == blank %}
                                                <img
                                                    class="img-fluid rounded-circle me-4"
                                                    src="{{ block.settings.img_author.src | image_url: width: block.settings.img_rounded_width, height: block.settings.img_rounded_height, crop: 'center' }}"
                                                    alt="{{ block.settings.img_author.alt | escape }}"
                                                    width="{{ block.settings.img_rounded_width }}"
                                                    height="{{ block.settings.img_rounded_height }}"
                                                    loading="lazy">
                                            {% endunless %}
                                    
                                            <div class="title-wrapper">
                                                {% unless block.settings.title == blank %}
                                                    <h3 class="title mb-0 {{ block.settings.title_size }}">
                                                        {{ block.settings.title }}
                                                    </h3>
                                                {% endunless %}
                                                {% unless block.settings.text_author == blank %}
                                                    <div class="rte mt-2 mb-0 {{ block.settings.description_size }}">
                                                        <p><em><strong>{{ block.settings.text_author }}</strong></em>
                                                            {% if block.settings.show_verified == 'show_avis_verified' %}
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#00b67a" class="bi bi-check-circle-fill" viewbox="0 0 16 16">
                                                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"></path>
                                                                </svg> 
                                                                <span class="extra-small"><em>{{ 'testimonials.verified_review' | t }}</em></span>
                                                            {% elsif block.settings.show_verified == 'show_achat_verified' %}
                                                                <span class="extra-small"><em>{{ 'testimonials.purchase' | t }} <span class="small verified">{{ 'testimonials.verified' | t }}</span></em></span>
                                                            {% endif %}
                                                        </p>
                                                    </div>
                                                {% endunless %}
                        
                                                {% if block.settings.show_stars %}
                                                    {% if section.settings.star_style == 'shopitrust' %}
                                                        <div class="d-flex {{ block.settings.title_align }} mt-2 mb-0">
                                                            {% assign stars_rating = block.settings.stars_rating %}
                                                            {% assign colors = "#e8e8eb,#ff3722,#ff8622,#ffce00,#73cf11,#00b67a" | split: "," %}
                                                            {% assign full_stars = stars_rating | floor %}
                                                            {% assign half_star_present = stars_rating | modulo: 1 %}
                                                            {% assign next_star = full_stars | plus: 1 %}

                                                            {% for i in (1..5) %}
                                                                {% if i <= full_stars %}
                                                                    {% comment %} Étoiles pleines {% endcomment %}
                                                                    {% assign color = colors[full_stars] %}
                                                                    <svg width="14" height="14" viewBox="0 0 16 16" fill="{{ color }}" class="m-1" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                                                        <path d="M16 0H0V16H16V0Z" fill="{{ color }}"></path>
                                                                        <path d="M5.8,9.3L8,10.8l3.5,2.5l-1.3-4.1l3.5-2.5H9.3L8,2.7L6.7,6.7H2.4L5.8,9.3z M13.6,6.7H9.3L8,2.7L6.7,6.7H2.4l3.5,2.5l-1.3,4.1L8,10.8l2.1-1.5L13.6,6.7z" fill="white"></path>
                                                                    </svg>
                                                                {% elsif i == next_star and half_star_present > 0 %}
                                                                    {% comment %} Demi-étoile, ajustez pour gérer spécifiquement 0.5 {% endcomment %}
                                                                    {% if full_stars == 0 and stars_rating == 0.5 %}
                                                                        {% assign gradient_color = colors[1] %}
                                                                    {% else %}
                                                                        {% assign gradient_color = colors[full_stars] %}
                                                                    {% endif %}
                                                                    <svg width="14" height="14" viewBox="0 0 16 16" class="m-1" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                                                        <defs>
                                                                            <linearGradient id="half_grad{{ i }}">
                                                                                <stop offset="50%" stop-color="{{ gradient_color }}"/>
                                                                                <stop offset="50%" stop-color="{{ colors.first }}"/>
                                                                            </linearGradient>
                                                                        </defs>
                                                                        <path d="M16 0H0V16H16V0Z" fill="url(#half_grad{{ i }})"></path>
                                                                        <path d="M5.8,9.3L8,10.8l3.5,2.5l-1.3-4.1l3.5-2.5H9.3L8,2.7L6.7,6.7H2.4L5.8,9.3z M13.6,6.7H9.3L8,2.7L6.7,6.7H2.4l3.5,2.5l-1.3,4.1L8,10.8l2.1-1.5L13.6,6.7z" fill="white"></path>
                                                                    </svg>
                                                                {% else %}
                                                                    {% comment %} Étoiles vides {% endcomment %}
                                                                    <svg width="14" height="14" viewBox="0 0 16 16" fill="{{ colors.first }}" class="m-1" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                                                        <path d="M16 0H0V16H16V0Z" fill="{{ colors.first }}"></path>
                                                                        <path d="M5.8,9.3L8,10.8l3.5,2.5l-1.3-4.1l3.5-2.5H9.3L8,2.7L6.7,6.7H2.4L5.8,9.3z M13.6,6.7H9.3L8,2.7L6.7,6.7H2.4l3.5,2.5l-1.3,4.1L8,10.8l2.1-1.5L13.6,6.7z" fill="white"></path>
                                                                    </svg>
                                                                {% endif %}
                                                            {% endfor %}
                                                        </div>
                                                    {% else %}
                                                        <div class="d-flex {{ block.settings.title_align }} mt-2 mb-0" style="color: {{ section.settings.star_color }};">
                                                            {% for i in (1..5) %}
                                                            {% if i <= block.settings.stars_rating %}
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill m-1" viewBox="0 0 16 16" aria-hidden="true">
                                                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                                                </svg>
                                                            {% else %}
                                                                {% assign t = i | minus: 1 %}
                                                                {% if block.settings.stars_rating > t and block.settings.stars_rating < i %}
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill m-1" viewBox="0 0 16 16" aria-hidden="true">
                                                                    <defs>
                                                                    <linearGradient id="grad">
                                                                        <stop offset="50%" stop-color="{{ section.settings.star_color }}"/>
                                                                        <stop offset="50%" stop-color="{{ section.settings.star_off }}"/>
                                                                    </linearGradient>
                                                                    </defs>
                                                                    <path fill="url(#grad)" d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>                                                  
                                                                </svg>
                                                                {% else %}
                                                                <svg class="bi bi-star-fill m-1 icon color-stars-gray" style="fill: {{ section.settings.star_off }}" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                                                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                                                </svg>
                                                                {% endif %}
                                                            {% endif %}
                                                            {% endfor %}
                                                        </div>
                                                    {% endif %}
                                                {% endif %}
                                                                
                                            </div>
                                        </div>
                                        {% unless block.settings.description == blank %}
                                            <div class="description rte mt-n3 mb-0 {{ block.settings.description_size }}">
                                                {{ block.settings.description }}
                                            </div>
                                        {% endunless %}
                                        {% unless block.settings.btn_text == blank %}
                                            <a class="btn mt-5 w-100 {{ block.settings.btn_color }} {{ btn_shadow_sp }} {{ block.settings.btn_size }}" href="{{ block.settings.btn_url }}">
                                                {{ block.settings.btn_text }}
                                            </a>
                                        {% endunless %}
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% if section.settings.btn_show %}
                <a 
                    class="btn btn-md mt-6 mb-0 {{ section.settings.btn_color }} {{ btn_shadow_sp }} {{ section.settings.btn_size }}" 
                    href="{{ section.settings.btn_url }}">
                    {{ section.settings.btn_text }}
                </a>
            {% endif %}
        </div>
    </section>

