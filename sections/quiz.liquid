{% comment %}
Quiz section template
{% endcomment %}

{% liquid 
    assign pt = section.settings.pt | prepend: 'pt-'
    assign pb = section.settings.pb | prepend: 'pb-'
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'

    assign bg_color = section.settings.bg_color

    if section.settings.bg_gradient
        assign bg_color = bg_color | append: ' bg-gradient'
    endif

    assign btn_shadow_sp = settings.btn_shadow_sp
%}

<section 
    id="quiz-{{ section.id }}" 
    class="quiz enter-view {{ bg_color }} {{ section.settings.text_align }} {{ pt }} {{ pb }} {{ mt }} {{ mb }}">
    <div class="{{ section.settings.container }} ">
        <div class="mx-auto" style="max-width: {{ section.settings.max_width }}px">
            <div class="quiz-header">
                {% render 'section-header' %}
            </div>
            <div class="quiz-items mt-6">
                {% assign total_questions = 0 %}
                {% for block in section.blocks %}
                    {% if block.type == 'item' %}
                        {% assign total_questions = total_questions | plus: 1 %}
                        {% liquid 
                            assign block_index = forloop.index
                            assign values = block.settings.values | split: ','
                            assign row_xs = block.settings.breakpoint_xs | prepend: 'row-cols-'
                            assign row_sm = block.settings.breakpoint_sm | prepend: 'row-cols-sm-'
                            assign row_md = block.settings.breakpoint_md | prepend: 'row-cols-md-'
                            assign row_lg = block.settings.breakpoint_lg | prepend: 'row-cols-lg-'
                            assign row_xl = block.settings.breakpoint_xl | prepend: 'row-cols-xl-'
                            assign row_xxl = block.settings.breakpoint_xxl | prepend: 'row-cols-xxl-'
                        %}
                        <div data-question="{{ forloop.index }}" {% unless request.design_mode %}{% unless forloop.first %}hidden{% endunless %}{% endunless %}>
                            <{{ block.settings.heading_tag }} class="title mb-3 {{ block.settings.title_size }}">
                                {{ block.settings.title }}
                            </{{ block.settings.heading_tag }}>
                            {% unless block.settings.description == blank %}
                                <div class="description text-muted rte mt-n1 mb-4 {{ block.settings.description_size }}">
                                    {{ block.settings.description }}
                                </div>
                            {% endunless %}
                            <ul class="row justify-content-start justify-content-lg-center list-unstyled nx-n3 mx-lg-n4 mb-7 {{ row_xs }} {{ row_sm }} {{ row_md }} {{ row_lg }} {{ row_xl }} {{ row_xxl }}">
                                {% for value in values %}
                                    {% comment %}Quiz option items would go here{% endcomment %}
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="quiz-results" {% unless request.design_mode %}hidden{% endunless %}>
                {% for block in section.blocks %}
                    {% if block.type == 'results' %}
                        {% liquid
                            assign row_xs = block.settings.breakpoint_xs | prepend: 'row-cols-'
                            assign row_sm = block.settings.breakpoint_sm | prepend: 'row-cols-sm-'
                            assign row_md = block.settings.breakpoint_md | prepend: 'row-cols-md-'
                            assign row_lg = block.settings.breakpoint_lg | prepend: 'row-cols-lg-'
                            assign row_xl = block.settings.breakpoint_xl | prepend: 'row-cols-xl-'
                            assign row_xxl = block.settings.breakpoint_xxl | prepend: 'row-cols-xxl-'
                        %}
                        <{{ block.settings.heading_tag }} class="title mb-4 {{ block.settings.title_size }}">
                            {{ block.settings.title }}
                        </{{ block.settings.heading_tag }}>
                        {% unless block.settings.description == blank %}
                            <div class="description text-muted rte mt-n3 mb-5 {{ block.settings.description_size }}">
                                {{ block.settings.description }}
                            </div>
                        {% endunless %}
                        {% for set in (1..12) %}
                            {% assign values = 'set_' | append: set | append: '_values' %}
                            {% assign products = 'set_' | append: set | append: '_products' %}
                            {% if block.settings[products].count > 0 %}
                                <ul 
                                    data-values="{{ block.settings[values] }}"
                                    data-result-set="{{ set }}" 
                                    class="product-listing list-unstyled row mx-n3 mx-lg-n4 mb-0 {{ section.settings.text_align }} {{ row_xs }} {{ row_sm }} {{ row_md }} {{ row_lg }} {{ row_xl }} {{ row_xxl }}" 
                                    {% unless request.design_mode %}hidden{% endunless %}>
                                    {% for product in block.settings[products] %}
                                        {% render 'product-item', product: product %}
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                {% endfor %}
                <hr class="">
                <button 
                    class="btn btn-quiz-reload px-8 {{ section.settings.prev_btn_color }} {{ btn_shadow_sp }} {{ section.settings.prev_btn_size }}" 
                    type="button"
                    onclick="window.location.reload();">
                    {{ 'general.quiz.btn_reload_quiz' | t }}
                </button>
            </div>
        </div>
    </div>
</section>

