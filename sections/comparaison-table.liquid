<div 
    id="comparison-table-{{ section.id }}" 
    class="comparison-table enter-view {{ bg_color }} {{ section.settings.text_align }} {{ pt }} {{ pb }} {{ mt }} {{ mb }}">
    <div class="{{ section.settings.container }}" style="max-width: {{ section.settings.max_width }}px">
      "label": "Column 1",
      "info": "Leave # to disable the cell"
                  style="border-width: {{ section.settings.border_width }}px;">
                <table 
                    class="
                        table align-middle mb-0
                        bg-white text-body
                        {{ section.settings.table_border_color }}
                        {% if section.settings.table_bordered %}
                            table-bordered
                        {% else %}
                            rounded
                        {% endif %}
                        {% if section.settings.table_striped %}
                            table-striped
                        {% endif %}
                    ">
                    <thead class="{{ section.settings.table_thead_color }}">
                        {% assign header_block = section.blocks.first %}
                        <tr>
                            {% for cell in header_cells %}
                                <th 
                                    scope="col" 
                                    class="py-5 text-nowrap {% if forloop.index == 2 %}{{ section.settings.table_second_col_color }} {{ section.settings.table_second_bg_color }}{% endif %}">
                                    {% unless cell == '#' %}
                                        {{ cell }}
                                    {% endunless %}
                                    {% case forloop.index %}
                                        {% when 2 %}
                                            {% unless header_block.settings.cell_2_img == blank %}
                                                {% render 'comparison-table-header-img', image: header_block.settings.cell_2_img %}
                                            {% endunless %}
                                        {% when 3 %}
                                            {% unless header_block.settings.cell_3_img == blank %}
                                                {% render 'comparison-table-header-img', image: header_block.settings.cell_3_img %}
                                            {% endunless %}
                                        {% when 4 %}
                                            {% unless header_block.settings.cell_4_img == blank %}
                                                {% render 'comparison-table-header-img', image: header_block.settings.cell_4_img %}
                                            {% endunless %}
                                        {% when 5 %}
                                            {% unless header_block.settings.cell_5_img == blank %}
                                                {% render 'comparison-table-header-img', image: header_block.settings.cell_5_img %}
                                            {% endunless %}
                                        {% when 6 %}
                                            {% unless header_block.settings.cell_6_img == blank %}
                                                {% render 'comparison-table-header-img', image: header_block.settings.cell_6_img %}
                                            {% endunless %}
                                        {% when 7 %}
                                            {% unless header_block.settings.cell_7_img == blank %}
                                                {% render 'comparison-table-header-img', image: header_block.settings.cell_7_img %}
                                            {% endunless %}
                                    {% endcase %}
                                </th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for block in section.blocks %}
                            {% unless block.type == 'header' or block.type == 'footer' %}
                                <tr>
                                    <th scope="row" class="text-center">
                                        {{ block.settings.title }}
                                    </th>
                                    {% for cell in header_cells %}
                                        {% unless forloop.first %}
                                            <td class="{% if forloop.index == 2 %}{{ section.settings.table_second_col_color }} {{ section.settings.table_second_bg_color }}{% endif %}">
                                                {% comment %}theme-check-disable{% endcomment %}
                                                {% if forloop.index == 2 %}
                                                    {% if block.settings.cell_2_display == 'icon' %}
                                                        {% if block.settings.cell_2 %}
                                                            {{ icon_checked_circle }}
                                                        {% else %}
                                                            {{ icon_unchecked }}
                                                        {% endif %}
                                                    {% else %}
                                                        {{ block.settings.cell_2_text }}
                                                    {% endif %}
                                                {% elsif forloop.index == 3 %}
                                                    {% if block.settings.cell_3_display == 'icon' %}
                                                        {% if block.settings.cell_3 %}
                                                            {{ icon_checked }}
                                                        {% else %}
                                                            {{ icon_unchecked }}
                                                        {% endif %}
                                                    {% else %}
                                                        {{ block.settings.cell_3_text }}
                                                    {% endif %}
                                                {% elsif forloop.index == 4 %}
                                                    {% if block.settings.cell_4_display == 'icon' %}
                                                        {% if block.settings.cell_4 %}
                                                            {{ icon_checked }}
                                                        {% else %}
                                                            {{ icon_unchecked }}
                                                        {% endif %}
                                                    {% else %}
                                                        {{ block.settings.cell_4_text }}
                                                    {% endif %}
                                                {% elsif forloop.index == 5 %}
                                                    {% if block.settings.cell_5_display == 'icon' %}
                                                        {% if block.settings.cell_5 %}
                                                            {{ icon_checked }}
                                                        {% else %}
                                                            {{ icon_unchecked }}
                                                        {% endif %}
                                                    {% else %}
                                                        {{ block.settings.cell_5_text }}
                                                    {% endif %}
                                                {% elsif forloop.index == 6 %}
                                                    {% if block.settings.cell_6_display == 'icon' %}
                                                        {% if block.settings.cell_6 %}
                                                            {{ icon_checked }}
                                                        {% else %}
                                                            {{ icon_unchecked }}
                                                        {% endif %}
                                                    {% else %}
                                                        {{ block.settings.cell_6_text }}
                                                    {% endif %}
                                                {% elsif forloop.index == 7 %}
                                                    {% if block.settings.cell_7_display == 'icon' %}
                                                        {% if block.settings.cell_7 %}
                                                            {{ icon_checked }}
                                                        {% else %}
                                                            {{ icon_unchecked }}
                                                        {% endif %}
                                                    {% else %}
                                                        {{ block.settings.cell_7_text }}
                                                    {% endif %}
                                                {% endif %}
                                                {% comment %}theme-check-enable{% endcomment %}
                                            </td>
                                        {% endunless %}
                                    {% endfor %}
                                </tr>
                            {% endunless %}
                        {% endfor %}
                    </tbody>
                    <tfoot class="{{ section.settings.table_tfoot_color }}">
                        <tr>
                            {% for fcell in footer_cells %}
                                <th 
                                    scope="col" 
                                    class="py-5 text-nowrap {% if forloop.index == 2 %}{{ section.settings.table_second_col_color }} {{ section.settings.table_second_bg_color }}{% endif %}">
                                    {% unless fcell == '#' %}
                                        {{ fcell }}
                                    {% endunless %}
                                </th>
                            {% endfor %}
                        </tr>
                    </tfoot>
                </table>
      </div>
