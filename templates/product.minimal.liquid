{% comment %}
Minimal product template - for testing redirects
{% endcomment %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>DEBUG - {{ product.title | default: 'Product not found' }}</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        .alert { padding: 15px; margin: 10px 0; border-radius: 5px; }
        .alert-info { background: #d1ecf1; color: #0c5460; }
        .alert-success { background: #d4edda; color: #155724; }
        .alert-danger { background: #f8d7da; color: #721c24; }
    </style>
</head>
<body>
    <h1>üîç DEBUG - Product Page</h1>
    
    <div class="alert alert-info">
        <h3>Page information</h3>
        <ul>
            <li><strong>Current URL:</strong> {{ canonical_url }}</li>
            <li><strong>Template used:</strong> product.minimal.liquid</li>
            <li><strong>Request URL:</strong> {{ request.path }}</li>
        </ul>
    </div>
    
    {% if product.id %}
        <div class="alert alert-success">
            <h3>‚úÖ Product found</h3>
            <ul>
                <li><strong>ID:</strong> {{ product.id }}</li>
                <li><strong>Handle:</strong> {{ product.handle }}</li>
                <li><strong>Title:</strong> {{ product.title }}</li>
                <li><strong>URL:</strong> {{ product.url }}</li>
                <li><strong>Price:</strong> {{ product.price | money }}</li>
                <li><strong>Available:</strong> {{ product.available }}</li>
            </ul>
        </div>
        
        <h2>{{ product.title }}</h2>
        <p>Price: {{ product.price | money }}</p>
        <p>{{ product.description | truncate: 200 }}</p>
        
    {% else %}
        <div class="alert alert-danger">
            <h3>‚ùå Product not found</h3>
            <p>No product was found for this URL.</p>
        </div>
    {% endif %}
    
    <hr>
    <a href="{{ routes.root_url }}" style="color: blue;">‚Üê Back to home</a>
</body>
</html>
